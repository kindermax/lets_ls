{
	"name": "lets-ls",
	"description": "A language server for lets task runner",
	"author": "Kindritskyi Max",
	"license": "MIT",
	"version": "0.1.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/kindermax/lets_ls"
	},
	"publisher": "kindritskyimax",
	"categories": [],
	"keywords": [
		"lets language server",
		"yaml",
		"task runner",
		"cli",
		"development"
	],
	"icon": "./lets.png",
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:yaml"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Lets LS",
			"properties": {
				"letsLs.executablePath": {
					"type": "string",
					"default": "lets_ls",
					"description": "Path to the lets ls."
				},
				"letsLs.logPath": {
					"type": "string",
					"default": "~/.cache/lets_ls/log/lets_ls.log",
					"description": "Log path for the LS."
				}
			}
		},
		"commands": [
			{
				"command": "lets-ls.restart",
				"title": "Lets LS: Restart LSP"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20",
		"eslint": "^9.13.0",
		"mocha": "^10.3.0",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.16.0"
	}
}
